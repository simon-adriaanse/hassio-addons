{
  "name": "Wordpress",
  "version": "0.0.8",
  "slug": "wordpress",
  "description": "OpenSource Website building tool",
  "url": "https://github.com/simon-adriaanse/hassio-addons/tree/master/wordpress",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "image": "ghcr.io/simon-adriaanse/wordpress-{arch}",
  "map": ["share:rw", "ssl:rw", "media:rw"],
  "ingress": true,
  "init": false,
  "panel_icon": "mdi:web-box",
  "options": {
    "document_root": "/share/htdocs",
    "php_ini": "default",
    "default_conf": "default",
    "default_ssl_conf": "default",
    "website_name": null,
    "DB_HOST": "DB_HOST",
    "DB_USER": "DB_USER",
    "DB_PASS": "DB_PASS",
    "DB_NAME": "DB_NAME",
    "ssl": true,
    "certfile": "fullchain.pem",
    "keyfile": "privkey.pem",
    "init_commands": []
  },
  "schema": {
    "document_root": "str",
    "php_ini": "str",
    "default_conf": "str",
    "default_ssl_conf": "str",
    "website_name": "str",
    "DB_HOST": "str",
    "DB_USER": "str",
    "DB_PASS": "password?",
    "DB_NAME": "str",
    "ssl": "bool",
    "certfile": "str",
    "keyfile": "str",
    "init_commands":
      "str?"
  },
  "ports": {
    "80/tcp": 80,
    "443": 443
  },
  "ports_description": {
    "80/tcp": "Web interface http",
    "443/tcp": "SSL Web interface"
  }
}